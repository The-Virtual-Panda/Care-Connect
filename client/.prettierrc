{
    "useTabs": false,
    "tabWidth": 4,
    "trailingComma": "none",
    "semi": true,
    "singleQuote": true,
    "printWidth": 160,
    "bracketSameLine": true,
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.mts",
                "*.d.ts"
            ],
            "options": {
                "parser": "typescript",
                "importOrderSeparation": true,
                "importOrderSortSpecifiers": true,
                "importOrder": [
                    "^@angular/(.*)$",
                    "^@core/(.*)$",
                    "^@shared/(.*)$",
                    "^@app/(.*)$",
                    "^@models/(.*)$",
                    "^@services/(.*)$",
                    "^@components/(.*)$",
                    "^primeng/(.*)$",
                    "^[./]"
                ],
                "importOrderParserPlugins": [
                    "typescript",
                    "decorators-legacy"
                ]
            }
        },
        {
            "files": [
                "*.html"
            ],
            "options": {
                "parser": "html",
                "singleAttributePerLine": true
            }
        },
        {
            "files": [
                "*.component.html"
            ],
            "options": {
                "singleAttributePerLine": true,
                "parser": "angular"
            }
        }
    ],
    "tailwindStylesheet": "./src/assets/tailwind.css",
    "plugins": [
        "@trivago/prettier-plugin-sort-imports",
        "prettier-plugin-tailwindcss"
    ]
}