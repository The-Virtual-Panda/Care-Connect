{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": "src",
    "skipLibCheck": true,
    "paths": {
      "@services/*": [
        "services/*"
      ],
      "@models/*": [
        "models/*"
      ]
    },
  },
  "compileOnSave": true,
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
}